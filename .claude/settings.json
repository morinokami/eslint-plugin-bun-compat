{
  "permissions": {
    "disableBypassPermissionsMode": "disable",
    "defaultMode": "default",
    "allow": [
      "Bash(bun run lint)",
      "Bash(bun run test)",
      "Bash(bun run typecheck)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(mkdir:*)",
      "Bash(cat:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:bun.com)",
      "WebFetch(domain:eslint.org)",
      "WebFetch(domain:vitest.dev)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Read(.env*)",
      "Edit(.env*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run lint"
          }
        ]
      }
    ]
  }
}
